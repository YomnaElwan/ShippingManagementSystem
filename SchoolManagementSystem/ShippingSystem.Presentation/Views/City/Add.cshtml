@using ShippingSystem.Presentation.ViewModels
@model CityViewModel
@{
    ViewData["Title"] = "Add";
    SelectList govsList = new SelectList(Model.GovernoratesList, "Id", "Name");
}

<h1>Add</h1>
<form asp-action="SaveNew" asp-controller="City" method="post"> 
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="DeliveryCost"></label>
        <input type="number" asp-for="DeliveryCost" class="form form-control" />
        <span asp-validation-for="DeliveryCost" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="PickupCost"></label>
        <input type="number" asp-for="PickupCost" class="form form-control"/>
        <span asp-validation-for="PickupCost" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="GovernorateId"></label>
        <select asp-for="GovernorateId" asp-items="govsList" class="form form-control">
            <option value="0">--Select Governorate--</option>
        </select>
        <span asp-validation-for="GovernorateId" class="text-danger"></span>
    </div>
    <div>
        <input type="submit" value="Add" class="btn btn-success mt-3"/>
    </div>
  
</form>
<a class="btn btn-dark mt-3" asp-action="Index" asp-controller="City"><i class="bi bi-arrow-left"> Back To List</i></a>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>