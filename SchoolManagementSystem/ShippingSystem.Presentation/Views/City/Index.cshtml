@using ShippingSystem.Domain.Entities
@model List<Cities>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a asp-action="Add" asp-controller="City" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add New City</a>

<table class="table table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Settings</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Details" asp-controller="City" asp-route-id="@item.Id" class="btn btn-info"><i class="bi bi-info-circle"></i></a>
                    <a asp-action="Delete" asp-controller="City" asp-route-Id="@item.Id" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
