@using ShippingSystem.Domain.Entities
@model List<Governorates>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a class="btn btn-primary" asp-action="Add" asp-controller="Governorate"><i class="bi bi-plus-circle"></i> Add New Governorate</a>
<table class="table table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Region Name</td>
            <td>Status</td>
            <td>Settings</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Region.Name</td>
                <td>
                    <div class="form-check form-switch">
                        <input class="form-check-input" onclick="return false;" type="checkbox" 
                        @(item.IsActive?"checked":"")/>
                    </div>
                </td>
                <td>
                    <a asp-action="Details" asp-controller="Governorate" class="btn btn-info"><i class="bi bi-info-circle"></i></a>
                    <a asp-action="Delete" asp-controller="Governorate" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>