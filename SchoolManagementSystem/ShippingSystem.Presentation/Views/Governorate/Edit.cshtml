@using ShippingSystem.Presentation.ViewModels
@model EditGovRegionViewModel
@{
    ViewData["Title"] = "Edit";
    SelectList regionList = new SelectList(Model.RegionList, "Id", "Name");
}

<h1>Edit</h1>

<form asp-action="SaveEdit" asp-controller="Governorate" asp-route-id="@Model.Id" method="post">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="RegionId"></label>
        <select asp-for="RegionId" class="form form-control" asp-items="regionList"></select>
        <span asp-validation-for="RegionId" class="text-danger"></span>
    </div>
    <div>
        <input type="submit" value="Save Edit" class="btn btn-success mt-3"/>
    </div>
</form>
<div>
    <a asp-action="Index" asp-controller="Governorate" class="btn btn-dark mt-3"><i class="bi bi-arrow-left"></i> Back To List</a>
</div>