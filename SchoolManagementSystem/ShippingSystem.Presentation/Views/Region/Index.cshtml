@using ShippingSystem.Domain.Entities
@model List<Regions>
@{
    ViewData["Title"] = "Regions";
}
<a asp-action="AddNew" asp-controller="Region" class="btn btn-primary">
    <i class="bi bi-plus-circle"></i> Add New 
</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Settings</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                   <a asp-action="Edit" asp-controller="Region" asp-route-id="@item.Id" class="btn btn-warning"> 
                       <i class="bi bi-pencil-square"></i>
                   </a>
                   <a asp-action="Details" asp-controller="Region" asp-route-id="@item.Id" class="btn btn-info">
                       <i class="bi bi-info-circle"></i>
                   </a>
                   <a asp-action="Delete" asp-controller="Region" asp-route-id="@item.Id" class="btn btn-danger">
                       <i class="bi bi-trash"></i>
                   </a>

                </td>
            </tr>
        }
       
    </tbody>
</table>

