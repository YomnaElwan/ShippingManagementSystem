@using ShippingSystem.Domain.Entities
@model Regions
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit</h1>
<form asp-action="SaveEdit" asp-controller="Region" method="post" asp-route-id="@Model.Id">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mt-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form form-control" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div>
        <input type="submit" value="Save Edit" class="btn btn-success mt-3"/>
    </div>
</form>
<div>
    <a asp-action="Index" asp-controller="Region" class="btn btn-dark mt-3">
        <i class="bi bi-arrow-left"></i> Go Back
    </a>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>