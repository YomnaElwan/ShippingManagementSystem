@using ShippingSystem.Domain.Entities
@model Regions
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form asp-action="SaveEdit" asp-controller="Region" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <input type="submit" value="Save Edit" class="btn btn-success" />
    </div>
</form>
<a asp-action="Index" asp-controller="Region" class="btn btn-dark mt-3"><i class="bi bi-arrow-left"></i> Back To List</a>