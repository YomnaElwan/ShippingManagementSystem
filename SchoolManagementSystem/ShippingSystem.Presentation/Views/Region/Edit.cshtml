@using ShippingSystem.Domain.Entities
@model Regions
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form method="post" asp-action="SaveEdit" asp-controller="Region" asp-route-Id="@Model.Id">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <label asp-for="Name"></label>
        <input class="form form-control" asp-for="Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <input type="submit" value="Save Edit" class="btn btn-success mt-3"/>
    </div>
</form>
<a asp-action="Index" asp-controller="Region" class="btn btn-dark mt-3"><i class="bi bi-arrow-left"></i> Back To List</a>


<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib//jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>