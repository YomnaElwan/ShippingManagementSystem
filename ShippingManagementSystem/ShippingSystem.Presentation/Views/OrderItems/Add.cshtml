@using ShippingSystem.Presentation.ViewModels.OrderItemsVM
@model AddOrderItemsVM
@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>
<form asp-action="SaveAdd" asp-controller="OrderItems" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form form-control"/>
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form form-control"/>
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Weight"></label>
        <input asp-for="Weight" class="form form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div>
        <input type="submit" class="btn btn-success mt-3" value="Save" />
    </div>
</form>
