@using ShippingSystem.Presentation.ViewModels.OrderItemsVM
@model List<GetOrderItemsVM>
<a asp-action="Add" asp-controller="OrderItems" class="btn btn-primary mt-3"><i class="bi bi-plus-circle"></i> Add Products</a>
<table class="table table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>ProductName</td>
            <td>Quantity</td>
            <td>Weight</td>
            <td>Price</td>
            <td>Settings</td>
        </tr>
    </thead>
    @if (Model == null || !Model.Any())
    {
        <tr>
            <td colspan="6" class="text-center">There are no items to show!</td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.Weight</td>
                <td>@item.Price</td>
                <td>
                    <a asp-action="Edit" asp-controller="OrderItems" asp-route-id="@item.Id" class="btn btn-warning"><i class="bi bi-square-pencil"></i></a>
                    <a asp-action="Delete" asp-controller="OrderItems" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    }


</table>