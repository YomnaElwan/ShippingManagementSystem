@using ShippingSystem.Domain.Entities
@model List<Merchants>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a asp-action="Add" asp-controller="Merchant" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add New Merchant</a>
<table class="table table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Email</td>
            <td>Phone Number</td>
            <td>Branch</td>
            <td>Status</td>
            <td>Settings</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <td>@item.Id</td>
                <td>@item.User.UserName</td>
                <td>@item.User.Email</td>
                <td>@item.User.PhoneNumber</td>
                <td>@item?.Branch?.Name</td>
                <td>
                    <div class="form-check form-switch">
                        <input onclick="return false;" class="form-check-input" type="checkbox" @(item.IsActive?"checked":"")/>
                    </div>
                </td>
                <td>
                    <a asp-action="Details" asp-controller="Merchant" asp-route-id="@item.Id" class="btn btn-info"><i class="bi bi-info-circle"></i></a>
                    <a asp-action="Edit" asp-controller="Merchant" asp-route-id="@item.Id" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-controller="Merchant" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

