@using ShippingSystem.Presentation.ViewModels.RegionVM
@model ReadRegionViewModel
@{
    ViewData["Title"] = "Details";
}


<div class="card shadow-sm rounded bg-light bg-opacity-75 mb-4">
    <div class="card-body">
        <h5 class="card-title"><i class="bi bi-geo-alt-fill text-danger"></i> @Model.RegionName</h5>
        <hr />
        <h6 class="card-subtitle mb-3 text-muted">Governorates:</h6>
        <div>
            @if (Model.RegionGovs != null && Model.RegionGovs.Any())
            {
                <ul class="list-group list-group-flush">
                    @foreach (var item in Model.RegionGovs)
                    {
                        <li class="list-group-item">@item.Name</li>
                    }
                </ul>
            }
            else
            {
                <div class="alert alert-warning mb-0">There are no governorates</div>
            }
        </div>
    </div>
</div>

<a asp-action="Index" asp-controller="Region" class="btn btn-dark">
    <i class="bi bi-arrow-left"></i> Go To List
</a>
