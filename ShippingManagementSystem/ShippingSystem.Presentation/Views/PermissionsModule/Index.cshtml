@using ShippingSystem.Domain.Entities
@model List<PermissionsModule>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a asp-action="Add" asp-controller="PermissionsModule" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add New Module</a>
<table class="table table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>CreateAt</td>
            <td>Settings</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.CreateAt</td>
                <td>
                    <a asp-action="Details" asp-controller="PermissionsModule" asp-route-id="@item.Id" class="btn btn-info"><i class="bi bi-info-circle"></i></a>
                    <a asp-action="Edit" asp-controller="PermissionsModule" asp-route-id="@item.Id" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-controller="PermissionsModule" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>