@using Microsoft.AspNetCore.Identity
@model List<IdentityRole>
@{
    ViewData["Title"] = "Index";
}
<div class="mt-3 mb-3">
    <a asp-action="Add" asp-controller="Role" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add New </a>
</div>
<div class="table-responsive">
    <table class="table table-hover table-bordered align-middle text-center bg-light bg-opacity-75 shadow-sm rounded">
        <thead class="table-primary">
            <tr>
                <td>Name</td>
                <td>Settings</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td><a asp-action="Manage" asp-controller="Role" asp-route-roleId="@role.Id" class="btn btn-primary mt-3">Manage</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>


