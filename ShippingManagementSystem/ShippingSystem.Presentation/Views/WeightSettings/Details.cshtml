@using ShippingSystem.Domain.Entities
@model WeightSettings
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <td>Base Weight Limit</td>
            <td>Price Per KG</td>
            <td>City Name</td>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.BaseWeightLimit</td>
            <td>@Model.PricePerKg</td>
            <td>@Model.Cities.Name</td>
        </tr>
    </tbody>
</table>
<a asp-action="Index" asp-controller="WeightSettings" class="btn btn-dark mt-3"><i class="bi bi-arrow-left"></i> Back To List</a>
