@using ShippingSystem.Presentation.ViewModels.WeightSettingsVM
@model ReadWeightSettingsViewModel
@{
    ViewData["Title"] = "Details";
}
<div class="table-responsive mt-3">
    <table class="table table-hover table-bordered align-middle text-center bg-light bg-opacity-75 shadow-sm rounded">
        <thead class="table-primary">
            <tr>
                <td>Base Weight Limit</td>
                <td>Price Per KG</td>
                <td>City Name</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.BaseWeightLimit</td>
                <td>@Model.PricePerKg</td>
                <td>@Model.CityName</td>
            </tr>
        </tbody>
    </table>
    <a asp-action="Index" asp-controller="WeightSettings" class="btn btn-dark mt-2"><i class="bi bi-arrow-left"></i> Back To List</a>
</div>

