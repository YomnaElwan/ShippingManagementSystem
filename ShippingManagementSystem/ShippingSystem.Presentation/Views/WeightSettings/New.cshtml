@using ShippingSystem.Presentation.ViewModels.WeightSettingsVM
@model WeightSettingsViewModel
@{
    ViewData["Title"] = "New";
    SelectList cityList = new SelectList(Model.CityList, "Id", "Name");
}

<section class="page-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-6">
                <div class="bg-faded rounded p-5 shadow">
                    <h2 class="section-heading text-center mb-4">
                        <span class="section-heading-upper">Weight Settings Management</span>
                        <span class="section-heading-lower">Add New Weight Settings</span>
                    </h2>
                    <form asp-action="SaveNew" asp-controller="WeightSettings" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div>
                            <label asp-for="BaseWeightLimit"></label>(Kg)
                            <input asp-for="BaseWeightLimit" class="form form-control" />
                            <span asp-validation-for="BaseWeightLimit" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="PricePerKg"></label>(EGP)
                            <input asp-for="PricePerKg" class="form form-control" />
                            <span asp-validation-for="PricePerKg" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="CityId"></label>
                            <select asp-for="CityId" asp-items="cityList" class="form form-control">
                                <option value="0">--Select City--</option>
                            </select>
                            <span asp-validation-for="CityId" class="text-danger"></span>
                        </div>
                        <div class="d-grid mt-3">
                            <button type="submit" class="btn btn-success btn-lg"><i class="bi bi-plus-circle"></i> Add</button>
                        </div>
                    </form>
                    <div class="text-center mt-4">
                        <a asp-action="Index" asp-controller="WeightSettings" class="btn btn-dark"><i class="bi bi-arrow-left"></i> Back To List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
