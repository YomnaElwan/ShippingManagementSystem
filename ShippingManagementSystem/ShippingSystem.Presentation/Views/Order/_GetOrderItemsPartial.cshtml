@model List<ShippingSystem.Presentation.ViewModels.OrderItemsVM.GetOrderItemsVM>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Id</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Weight</th>
            <th>Price</th>
            <th>Settings</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Weight</td>
                    <td>@item.Price</td>
                    <td>
                        <a asp-action="DeleteFromOrderItems" asp-controller="Order" asp-route-id="@item.Id" class="btn btn-danger btnDeleteProduct"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No Products Added</td>
            </tr>
        }
    </tbody>
</table>
