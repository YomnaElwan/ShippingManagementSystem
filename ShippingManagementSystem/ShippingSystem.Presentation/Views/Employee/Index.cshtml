@using ShippingSystem.Presentation.ViewModels.EmployeeVM
@model List<GetEmployeeListViewModel>
@{
    ViewData["Title"] = "Index";
}
<div class="mt-3 mb-3">
    <a asp-action="Add" asp-controller="Employee" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add New </a>
</div>
<div class="table-responsive">
    <table class="table table-hover table-bordered align-middle text-center bg-light bg-opacity-75 shadow-sm rounded">
        <thead class="table-primary">
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Email</td>
                <td>Phone Number</td>
                <td>Branch</td>
                <td>Status</td>
                <td>Settings</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.EmployeeId</td>
                    <td>@emp.EmployeeName</td>
                    <td>@emp.EmployeeEmail</td>
                    <td>@emp.EmployeePhone</td>
                    <td>@emp.BranchName</td>
                    <td>
                        <div class="form-check form-switch">
                            <input class="form-check-input" onclick="return false;" type="checkbox"
                            @(emp.IsActive ? "checked" : "") />
                        </div>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="Employee" asp-route-id="@emp.EmployeeId" class="btn btn-warning btn-sm"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="Delete" asp-controller="Employee" asp-route-id="@emp.EmployeeId" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
