@using ShippingSystem.Presentation.ViewModels.BranchVM
@model List<ReadBranchesViewModel>
@{
    ViewData["Title"] = "Index";
    int counter = 1;
}

<a asp-action="Add" asp-controller="Branch" class="btn btn-primary mt-3 mb-3"><i class="bi bi-plus-circle"></i> Add New </a>
<div class="table-responsive">
    <table class="table table-hover table-bordered align-middle text-center bg-light bg-opacity-75 shadow-sm rounded">
        <thead class="table-primary">
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Creation Date & Time</td>
                <td>Status</td>
                <td>Settings</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @* <td>@item.Id</td> *@
                    <td>@counter</td>
                    <td>@item.Name</td>
                    <td>@item.CreateAt</td>
                    <td>
                        <div class="form-check form-switch">
                            <input type="checkbox" class="form-check-input" onclick="return false;"
                            @(item.IsActive ? "checked" : "") />
                        </div>
                    </td>
                    <td>
                        <a asp-action="Details" asp-controller="Branch" asp-route-Id="@item.Id" class="btn btn-info btn-sm text-white"><i class="bi bi-info-circle"></i></a>
                        <a asp-action="Edit" asp-controller="Branch" asp-route-Id="@item.Id" class="btn btn-warning btn-sm"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="Delete" asp-controller="Branch" asp-route-Id="@item.Id" class="btn btn-danger btn-sm"><i class="bi bi-trash" onclick="return confirm('Are you sure you want to delete this branch?');"></i></a>
                    </td>

                </tr>
                counter++;
            }
        </tbody>

    </table>
    <div class="d-flex justify-content-center mt-3">
        <div class="pagination">
            @if (ViewBag.CurrentPage > 1)
            {
                <a asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage - 1)" class="btn btn-outline-primary mx-1">Previous</a>
            }
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                @if (i == ViewBag.CurrentPage)
                {
                    <span class="btn btn-primary mx-1">@i</span>
                }
                else
                {
                    <a asp-action="Index" asp-route-pageNumber="@i" class="btn btn-outline-primary mx-1">@i</a>
                }
            }
            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <a asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage +1)" class="btn btn-outline-primary mx-1">Next</a>
            }
        </div>
    </div>
</div>


