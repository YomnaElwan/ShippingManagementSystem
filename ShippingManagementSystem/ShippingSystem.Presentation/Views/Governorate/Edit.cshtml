@using ShippingSystem.Presentation.ViewModels.GovernorateVM
@model EditGovernorateViewModel
@{
    ViewData["Title"] = "Edit";
    SelectList regionList = new SelectList(Model.RegionList, "Id", "Name");
}

<section class="page-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-6">
                <div class="bg-faded rounded p-5 shadow">
                    <h2 class="section-heading text-center mb-4">
                        <span class="section-heading-upper">Governorate Management</span>
                        <span class="section-heading-lower">Edit Governorate</span>
                    </h2>
                    <form asp-action="SaveEdit" asp-controller="Governorate" asp-route-id="@Model.Id" method="post">
                        <div asp-validation-summary="All" class="text-danger">
                        </div>
                        <div>
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form form-control" placeholder="Edit Governorate Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="RegionId"></label>
                            <select asp-for="RegionId" class="form form-control" asp-items="regionList">
                                <option value="">-- Select Region --</option>
                            </select>
                            <span asp-validation-for="RegionId" class="text-danger"></span>
                        </div>
                        <div class="d-grid mt-3">
                            <button type="submit" class="btn btn-success btn-lg"><i class="bi bi-save"></i> Save Changes</button>
                        </div>
                    </form>
                    <div class="text-center mt-4">
                        <a asp-action="Index" asp-controller="Governorate" class="btn btn-dark"><i class="bi bi-arrow-left"></i> Back To List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>