@using ShippingSystem.Domain.Entities
@model List<Governorates>
@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-primary mt-3 mb-3" asp-action="Add" asp-controller="Governorate"><i class="bi bi-plus-circle"></i> Add New </a>
<table class="table table-hover table-bordered align-middle text-center bg-light bg-opacity-75 shadow-sm rounded">
    <thead class="table-primary">
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Status</td>
            <td>Settings</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <div class="form-check form-switch">
                        <input class="form-check-input" onclick="return false;" type="checkbox" 
                        @(item.IsActive?"checked":"")/>
                    </div>
                </td>
                <td>
                    <a asp-action="Details" asp-controller="Governorate" class="btn btn-info btn-sm" asp-route-id="@item.Id"><i class="bi bi-info-circle text-white"></i></a>
                    <a asp-action="Edit" asp-controller="Governorate" class="btn btn-warning btn-sm" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-controller="Governorate" class="btn btn-danger btn-sm" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination Controls -->
<div class="d-flex justify-content-center mt-3">
    <div class="pagination">
        @if (ViewBag.CurrentPage > 1)
        {
            <a asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage - 1)" class="btn btn-outline-primary mx-1">Previous</a>
        }

        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            if (i == ViewBag.CurrentPage)
            {
                <span class="btn btn-primary mx-1">@i</span>
            }
            else
            {
                <a asp-action="Index" asp-route-pageNumber="@i" class="btn btn-outline-primary mx-1">@i</a>
            }
        }

        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <a asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage + 1)" class="btn btn-outline-primary mx-1">Next</a>
        }
    </div>
</div>
