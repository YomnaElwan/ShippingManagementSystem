@using ShippingSystem.Presentation.ViewModels.GovernorateVM
@model ReadGovernoratesViewModel
@{
    ViewData["Title"] = "Details";
}


<div class="card shadow-sm rounded bg-light bg-opacity-75 mb-4">
    <div class="card-body">
        <h5 class="card-title">
            <i class="bi bi-geo-alt-fill text-danger"></i> @Model.Name
            </h5>
        <small class="text-light">  @Model.RegionName</small>
        <hr />
        <h6 class="card-subtitle mb-3 text-muted">Cities:</h6>
        <div>
            @if (Model.Cities != null && Model.Cities.Any())
            {
                <ul class="list-group list-group-flush">
                    @foreach (var item in Model.Cities)
                    {
                        <li class="list-group-item">@item.Name</li>
                    }
                </ul>
            }
            else
            {
                <div class="alert alert-warning mb-0">There are no cities!</div>
            }
        </div>
    </div>
</div>

<a asp-action="Index" asp-controller="Governorate" class="btn btn-dark"><i class="bi bi-arrow-left"></i> Back to List</a>
