@using ShippingSystem.Presentation.ViewModels.OrderStatusVM
@model EditOrderStatusVM
@{
    ViewData["Title"] = "Edit";
}

<section class="page-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-6">
                <div class="bg-faded rounded p-5 shadow">
                    <h2 class="section-heading text-center mb-4">
                        <span class="section-heading-upper">Order Status Management</span>
                        <span class="section-heading-lower">Edit Order Status Name</span>
                    </h2>
                    <form asp-route-id="@Model.Id" asp-action="SaveEdit" asp-controller="OrderStatus" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div>
                            <label asp-for="StsName"></label>
                            <input asp-for="StsName" class="form form-control" />
                            <span asp-validation-for="StsName" class="text-danger"></span>
                        </div>
                        <div class="mt-3 d-grid">
                            <button type="submit" class="btn btn-success btn-lg"><i class="bi bi-save"></i> Save Changes</button>
                        </div>
                    </form>
                    <div class="mt-4 text-center">
                        <a asp-action="Index" asp-controller="OrderStatus" class="btn btn-dark"><i class="bi bi-arrow-left"> Back To List</i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


