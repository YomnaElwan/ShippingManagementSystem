@using ShippingSystem.Presentation.ViewModels.OrderStatusVM
@model AddOrderStatusVM
@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>
<form asp-action="SaveAdd" asp-controller="OrderStatus" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div>
        <label asp-for="StsName"></label>
        <input asp-for="StsName" class="form form-control" />
        <span asp-validation-for="StsName" class="text-danger"></span>
    </div>
    <div>
        <input type="submit" value="Save" class="btn btn-success mt-3" />
    </div>
</form>
<a asp-action="Index" asp-controller="OrderStatus" class="btn btn-dark mt-3"><i class="bi bi-arrow-left"> Back To List</i></a>