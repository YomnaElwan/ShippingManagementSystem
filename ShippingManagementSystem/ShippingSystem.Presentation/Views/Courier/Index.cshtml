@using ShippingSystem.Presentation.ViewModels.CourierVM
@model List<ReadCourierViewModel>
@{
    ViewData["Title"] = "Index";
}
<div class="mt-3 mb-3">
    <a asp-action="Add" asp-controller="Courier" class="btn btn-primary"><i class="bi bi-plus-circle"> Add New </i></a>
</div>
<div class="table-responsive">
    <table class="table table-hover table-bordered text-center align-middle bg-light bg-opacity-75 shadow-sm rounded">
        <thead class="table-primary">
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Email</td>
                <td>Phone Number</td>
                <td>Branch</td>
                <td>Status</td>
                <td>Settings</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CourierId</td>
                    <td>@item.CourierName</td>
                    <td>@item.CourierEmail</td>
                    <td>@item.CourierPhone</td>
                    <td>@item.BranchName</td>
                    <td>
                        <div class="form-check form-switch">
                            <input type="checkbox" onclick="return false;" class="form-check-input"
                            @(item.IsActive ? "checked" : "") />
                        </div>
                    </td>
                    <td>
                        <a asp-action="Details" asp-controller="Courier" class="btn btn-info text-white btn-sm" asp-route-id="@item.CourierId"><i class="bi bi-info-circle"></i></a>
                        <a asp-action="Edit" asp-controller="Courier" asp-route-id="@item.CourierId" class="btn btn-warning btn-sm"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="Delete" asp-controller="Courier" asp-route-id="@item.CourierId" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


