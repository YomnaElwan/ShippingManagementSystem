@using ShippingSystem.Presentation.ViewModels.OrderVM
@model OrdersHomeVM
@{
    ViewData["Title"] = "OrdersHome";
}

@if(User.IsInRole("Admin")){
    <div class="mt-3 mb-3 text-center">
        <a class="btn btn-primary m-2" asp-action="Index" asp-controller="Employee"><i class="bi bi-list-ul"></i> Employees</a>
        <a class="btn btn-primary m-2" asp-action="Index" asp-controller="Merchant"><i class="bi bi-list-ul"></i> Merchants</a>
    </div>
}

    <div style="display:flex;flex-wrap:wrap;gap:15px" class="mt-3">
        @foreach (var item in Model.OrderStatusList)
        {
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <i class="bi bi-bag-fill" style="font-size:24px;color:blueviolet"></i>
                    <h5 class="card-title">@item.Name</h5>
                    <a class="btn btn-primary">@(Model.OrderCountByStatus.ContainsKey(item.Id) ? Model.OrderCountByStatus[item.Id] : 0)</a>
                </div>
            </div>
        }
    </div>
   

    



