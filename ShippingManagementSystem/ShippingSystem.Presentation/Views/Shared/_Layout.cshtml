<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShippingSystem.Presentation</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShippingSystem.Presentation.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ShippingSystem.Presentation</a> *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @* <li class="nav-item"> *@
                        @*     <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a> *@
                        @* </li> *@
                        @if(User.IsInRole("Admin")){
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Region" asp-action="Index">Regions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Governorate" asp-action="Index">Governorates</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="City" asp-action="Index">Cities</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Branch" asp-action="Index">Branches</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="WeightSettings" asp-action="Index">Weight Settings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="ShippingType" asp-action="Index">Shipping Type</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="PaymentMethod" asp-action="Index">Payment Method</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Role" asp-action="Index">Roles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="PermissionsModule" asp-action="Index">Permissions Module</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Permissions" asp-action="Add">Permissions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Employee" asp-action="Index">Employees</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Merchant" asp-action="Index">Merchants</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Courier" asp-action="Index">Couriers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Order" asp-action="Index">Orders</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                            
                        }
                        else{
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        }
                       
                   
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ShippingSystem.Presentation - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
