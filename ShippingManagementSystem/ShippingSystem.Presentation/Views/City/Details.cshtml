@using ShippingSystem.Presentation.ViewModels.CityVM
@model ReadCityViewModel
@{
    ViewData["Title"] = "Details";
}
<div class="card shadow-sm rounded bg-light bg-opacity-75 mb-3 mt-3">
    <div class="card-body">
        <h5 class="card-title"><i class="bi bi-geo-alt-fill text-danger"></i> @Model.CityName</h5>
    </div>
</div>
<div class="table-responsive"></div>
<table class="table table-hover table-bordered align-middle text-center bg-light bg-opacity-75 shadow-sm rounded">
    <thead class="table-primary">
        <tr>
            <td>Name</td>
            <td>Delivery Cost</td>
            <td>Pick Up Cost</td>
            <td>Governorate Name</td>
        </tr>
    </thead>
    <tbody>
       <tr>
           <td>@Model.CityName</td>
           <td>@Model.DeliveryCost EGP</td>
           <td>@Model.PickupCost EGP</td>
           <td>@Model.GovernorateName</td>
       </tr>
    </tbody>
</table>
<a asp-action="Index" asp-controller="City" class="btn btn-dark"><i class="bi bi-arrow-left"> Back To List</i></a>

